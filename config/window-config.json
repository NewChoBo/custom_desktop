{
    "window": {
        "width": "80%",
        "height": 600,
        "position": {
            "x": "center-bottom",
            "y": "bottom",
            "offsetX": 0,
            "offsetY": -50
        },
        "minWidth": 300,
        "minHeight": 400,
        "windowLevel": "alwaysOnTop",
        "resizable": true,
        "movable": true,
        "level": "floating",
        "visibleOnAllWorkspaces": true,
        "fullscreenable": false
    },
    "ui": {
        "theme": "dark",
        "transparency": 0.3,
        "borderRadius": 12,
        "showScrollbar": false,
        "showTitleBar": false,
        "showSettingsButton": false,
        "roundedCorners": true
    },
    "behavior": {
        "hideToTray": true,
        "startMinimized": false,
        "autoStart": true,
        "hideFromTaskbar": true
    }
}